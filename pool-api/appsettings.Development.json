{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "bbob": "data source=(LocalDB)\\MSSQLLocalDB;initial catalog=bbob;integrated security=True;MultipleActiveResultSets=True"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithCorrelationId" ],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "c:\\temp\\bbob-.log",
              "rollingInterval": "Day",
              "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{CorrelationId}) {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  }
}
